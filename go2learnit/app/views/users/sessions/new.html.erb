<% title 'Login' %>

<div class="container">
  <%= render '/layouts/menu-logo' %>
</div>

<div class="container form-registration">

  <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3">
    <h2 class="painel-header text-center">Welcome Back!</h2>
    <hr>
  </div>

  <div class="col-lg-4 col-lg-offset-4 form-new-user col-sm-6 col-sm-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
      </fieldset>

      <fieldset class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
      </fieldset>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign in", class: 'btn btn-success btn-block btn-lg' %>
      </div>
    <% end %>
    <br>
    <div class="text-center">
      <p><%= link_to "Forgot your password?", new_password_path(resource_name), class: 'cor-vermelho-morto' %></p>
      <p><%= link_to "Sign up for an account", new_registration_path(resource_name), class: 'cor-cinza-morto' %></p>
    </div>


  </div>

</div>
