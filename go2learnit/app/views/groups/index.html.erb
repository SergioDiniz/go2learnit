<% title 'Groups' %>

<div class="page-content">
  <div class="container">
    <!-- <p id="notice"><%= notice %></p> -->



    <div class="row">
      <div class="page-title pull-left">
        <i>Groups</i>
      </div>
      <!-- <div class=" pull-right">
        <div class="navbar">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <a href="#">TODOS</a>
            </li>
            <li class="nav-item">
