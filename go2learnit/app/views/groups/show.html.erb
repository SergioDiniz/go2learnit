<% title @group.title %>
<div class="page-content">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @group.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @group.description %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @group.first_name %>
